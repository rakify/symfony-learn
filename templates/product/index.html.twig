{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }
    .product-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        box-shadow: 2px 2px 12px rgba(0,0,0,0.1);
    }
    .product-card img {
        width: 100px;
        height: 100px;
        object-fit: contain;
    }
    .product-card h3 {
        font-size: 18px;
        margin: 10px 0;
    }
    .product-card p {
        font-size: 14px;
        color: #555;
    }
    .product-card .price {
        font-weight: bold;
        color: #333;
    }
</style>

<div class="example-wrapper">
    <h1>Product List</h1>

    <div class="product-grid">
        {% for product in products %}
            <div class="product-card">
                <img src="{{ product.image }}" alt="{{ product.title }}">
                <h3>{{ product.title }}</h3>
                <p>{{ product.category }}</p>
                <p class="price">${{ product.price }}</p>
            </div>
        {% else %}
            <p>No products available.</p>
        {% endfor %}
    </div>

        <!-- Back to Home Button -->
    <a href="{{ path('app_home') }}" class="nav-link">â¬… Back to Home</a>
</div>
{% endblock %}
